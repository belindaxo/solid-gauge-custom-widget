{
    "name": "Solid Gauge",
    "description": "A solid gauge chart with data binding support",
    "eula": "",
    "vendor": "",
    "license": "",
    "id": "com.sap.sample.solidgauge",
    "newInstancePrefix": "SolidGauge",
    "version": "0.0.1",
    "webcomponents": [
        {
            "kind": "main",
            "tag": "com-sap-sample-solidgauge",
            "url": "https://belindaxo.github.io/solid-gauge-custom-widget/dist/bundle.js",
            "integrity": "sha256-DArmzoufpd4hu6Z132WFbF11jIZuy5gYpF9lDAirM3k=",
            "ignoreIntegrity": false
        },
        {
            "kind": "styling",
            "tag": "com-sap-sample-solidgauge-aps",
            "url": "https://belindaxo.github.io/solid-gauge-custom-widget/dist/bundle.js",
            "integrity": "sha256-DArmzoufpd4hu6Z132WFbF11jIZuy5gYpF9lDAirM3k=",
            "ignoreIntegrity": false
        }
    ],
    "properties": {
        "width": {
            "type": "integer",
            "default": 600
        },
        "height": {
            "type": "integer",
            "default": 400
        },
        "chartTitle": {
            "type": "string",
            "description": "The title of the chart",
            "default": ""
        },
        "titleSize": {
            "type": "string",
            "description": "The font size of the title",
            "default": "16px"
        },
        "titleFontStyle": {
            "type": "string",
            "description": "The font style of the title",
            "default": "bold"
        },
        "titleAlignment": {
            "type": "string",
            "description": "The alignment of the title",
            "default": "left"
        },
        "titleColor": {
            "type": "string",
            "description": "The color of the title text",
            "default": "#004B8D"
        },
        "labelSize": {
            "type": "string",
            "description": "The font size of the data label",
            "default": "14px"   
        },
        "minValue": {
            "type": "number",
            "description": "The minimum value of the gauge",
            "default": -2
        },
        "maxValue": {
            "type": "number",
            "description": "The maximum value of the gauge",
            "default": 2
        },
        "stop1": {
            "type": "number",
            "default": 0.4875
        },
        "stop2": {
            "type": "number",
            "default": 0.5
        },
        "stop3": {
            "type": "number",
            "default": 0.5
        },
        "targetValue": {
            "type": "number",
            "description": "The target value of the gauge",
            "default": 0
        },
        "invertGauge": {
            "type": "boolean",
            "description": "Inverts the colors of the gauge",
            "default": false
        }
    },
    "methods": {

    },
    "events": {

    },
    "dataBindings": {
        "dataBinding": {
            "feeds": [
                {
                    "id": "dimensions",
                    "description": "Dimensions",
                    "type": "dimension"
                },
                {
                    "id": "measures",
                    "description": "Measures",
                    "type": "mainStructureMember"
                }
            ]
        }
    }
}